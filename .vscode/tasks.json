{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "g++.exe",
            "args": [
                "${file}",                          // 要编译的单个文件, 与下一行二选一
                // "*.cpp", "*.c",                  // 要编译的多个文件, 与上一行二选一
                // "-Wall", "-Wextra",              // 开启额外警告
                "-O2",                              // 编译优化
                "-static-libgcc",                   // 静态链接
                "-fdiagnostics-color=auto",         // 彩色信息
                "-w",                               // 屏蔽警告
                "-o",
                "${fileDirname}\\debug\\${fileBasenameNoExtension}.exe",
                //以下都是链接库参数，需要链接什么库就加在这
                "-lws2_32",
                "-lIphlpapi",
                "-lgdi32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成debug文件",
            "command": "g++.exe",
            "args": [
                "${file}",                          // 要编译的单个文件, 与下一行二选一
                // "*.cpp", "*.c",                  // 要编译的多个文件, 与上一行二选一
                "-Wall", "-Wextra",                 // 开启额外警告
                "-g",                               // 生成和调试有关的信息
                "-static-libgcc",                   // 静态链接
                "-fdiagnostics-color=auto",         // 彩色信息
                // "-w",                            // 屏蔽警告
                "-o",
                "${fileDirname}\\debug\\${fileBasenameNoExtension}.exe",
                //以下都是链接库参数，需要链接什么库就加在这
                "-lws2_32",
                "-lIphlpapi",
                "-lgdi32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}